<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchor" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.Cours.QuizStartController">


    <Label fx:id="quizTitleLabel" layoutX="30.0" layoutY="20.0" prefHeight="35.0" prefWidth="740.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Quiz Title" />

    <ScrollPane layoutX="30.0" layoutY="93.0" prefHeight="377.0" prefWidth="740.0">
        <VBox fx:id="questionsContainer" spacing="10.0" style="-fx-padding: 20;" />
    </ScrollPane>

    <HBox layoutX="30.0" layoutY="500.0" spacing="10.0">
        <Button fx:id="prevButton" onAction="#handlePrev" text="Précédent" />
        <Button fx:id="nextButton" onAction="#handleNext" text="Suivant" />
    </HBox>

    <Button fx:id="submitButton" layoutX="700.0" layoutY="500.0" text="Soumettre" />
   <Button fx:id="exit" onAction="#handleExit" layoutX="30.0" layoutY="542.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" text="Exit" />

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.Admin.AdminArtisteController"
            prefHeight="600.0" prefWidth="1000.0">

   <StackPane fx:id="mainContainer" prefWidth="1000" prefHeight="600"
              style="-fx-font-family: 'Garamond'; -fx-background-color: #f8f8fc;">

      <children>
         <!-- Sidebar -->
         <VBox prefWidth="180.0"
               style="-fx-background-color: #7f56d9; -fx-alignment: center; -fx-spacing: 20; -fx-padding: 20;"
               AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
               <ImageView fitHeight="80.0" fitWidth="80.0"/>
               <Text text="Admin Panel" fill="white">
                  <font>
                     <Font name="System Bold" size="20.0"/>
                  </font>
               </Text>
            </children>
         </VBox>

         <!-- Main Content -->
         <AnchorPane layoutX="180.0"
                     AnchorPane.leftAnchor="180.0" AnchorPane.topAnchor="0.0"
                     AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                     style="-fx-background-color: #f5f5f5;">
            <children>
               <!-- Title -->
               <Text layoutX="30.0" layoutY="50.0" text="Liste des Galeries"
                     style="-fx-font-size: 26px; -fx-fill: #4B0082; -fx-font-weight: bold;"/>

               <!-- Search Field -->
               <TextField fx:id="searchField" layoutX="30.0" layoutY="100.0" prefWidth="300.0"
                          promptText="Rechercher..."
                          style="-fx-background-color: #e0e0e0; -fx-border-radius: 20; -fx-padding: 10; -fx-font-size: 16px;"/>

               <!-- ListView -->
               <ListView fx:id="listGaleries" layoutX="30.0" layoutY="150.0"
                         prefHeight="400.0" prefWidth="870.0"
                         style="-fx-background-color: transparent;"/>

            </children>
         </AnchorPane>
      </children>
   </StackPane>
</AnchorPane>

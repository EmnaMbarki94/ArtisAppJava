<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<?import javafx.scene.control.TextField?>
<AnchorPane fx:id="contenuPane" prefHeight="800.0" prefWidth="1299.0"
            style="-fx-background-color: #ffffff; -fx-padding: 30px;"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controller.Admin.Magasins.AdminMagasinController">

   <children>
      <!-- Header -->
      <Label layoutX="30" layoutY="10" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Les magasins" />
      <TextField fx:id="searchField" layoutX="800.0" layoutY="20.0" prefWidth="300.0" promptText="Rechercher un magasin..."
                 style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #dfe6e9;" />

      <!-- Conteneur des cartes magasins - version moderne comme l'image -->
      <ScrollPane layoutX="30" layoutY="70" prefHeight="658.0" prefWidth="1221.0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-padding: 0;">      <FlowPane fx:id="cardsContainer" hgap="20" layoutX="30" layoutY="70" prefHeight="758.0" prefWidth="1253.0" vgap="20">
         <!-- Ajoutez plus de cartes selon vos besoins -->
      </FlowPane>
      </ScrollPane>

                        <!-- Bouton d'ajout -->
      <Button fx:id="btnAjouterMagasin" layoutX="1095.0" layoutY="760.0" prefHeight="36.0" prefWidth="107.0" style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px; -fx-padding: 8px 16px;" text="Ajouter (+)" />
   </children>
</AnchorPane>

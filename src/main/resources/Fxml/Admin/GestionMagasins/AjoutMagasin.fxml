<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="805.0" prefWidth="1293.0" styleClass="root" stylesheets="@../../Styles/magasin.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.Admin.Magasins.AjoutMagasin">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="240.0" layoutY="97.0" prefHeight="573.0" prefWidth="802.0" spacing="20" styleClass="vbox-form">

            <Label styleClass="label-title" text="Ajouter un Magasin" />

            <TextField fx:id="tfNom" promptText="Nom du magasin" styleClass="text-field-style" />
            <Label fx:id="lblErrorNom" text="" style="-fx-text-fill: red;" />

            <TextField fx:id="tfType" promptText="Type de magasin" styleClass="text-field-style" />
            <Label fx:id="lblErrorType" text="" style="-fx-text-fill: red;" />


            <HBox alignment="CENTER" prefHeight="147.0" prefWidth="715.0" spacing="10">
                <ImageView fx:id="imageViewMagasin" fitHeight="128.0" fitWidth="201.0" styleClass="image-view-style" translateX="-50.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin></ImageView>
                <Button onAction="#choisirImage" prefHeight="41.0" prefWidth="181.0" styleClass="button-style" text="Choisir une image" />
            </HBox>
            <Label fx:id="lblErrorImage" text="" style="-fx-text-fill: red;" />


            <Button fx:id="btnAjouter" onAction="#ajouterMagasin" prefWidth="250" styleClass="button-style" text="Ajouter" textAlignment="CENTER">
            <font>
               <Font name="Arial Nova" size="15.0" />
            </font></Button>

            <Button fx:id="btnRetour" onAction="#retournerAccueil" prefWidth="250" styleClass="button-style" text="Retour">
            <font>
               <Font name="Arial" size="15.0" />
            </font></Button>

        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="617.0" prefWidth="907.0" stylesheets="@../../Styles/statsMagasin.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.Admin.Magasins.StatsMagasinsController">

    <VBox prefHeight="598.0" prefWidth="907.0" spacing="20" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Statistiques des Magasins" />

            <TabPane>
                <Tab text="Articles les plus vendus">
                    <VBox>
                        <BarChart fx:id="articlesChart" prefWidth="834.0" title="Top 5 des articles les plus vendus">
                            <xAxis>
                                <CategoryAxis label="Articles" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Quantité vendue" />
                            </yAxis>
                        </BarChart>
                    </VBox>
                </Tab>

                <Tab text="Ventes par magasin">
                    <VBox>
                        <PieChart fx:id="magasinsChart" title="Répartition des ventes par magasin" />
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </AnchorPane>

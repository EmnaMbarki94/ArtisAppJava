<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane fx:id="contenuPane" prefHeight="800.0" prefWidth="1299.0"
            style="-fx-background-color: #ffffff; -fx-padding: 30px;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controller.Admin.Magasins.ArticleController">

    <children>
        <!-- Titre de la section -->
        <Label layoutX="30" layoutY="10"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d3436;"
               text="Articles" />


        <!-- Bouton pour retourner à la liste des magasins -->
        <Button fx:id="btnRetourMagasins" layoutX="30.0" layoutY="55.0"
                prefHeight="36.0" prefWidth="180.0"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px;"
                text="← Retour aux magasins" />

        <!-- ScrollPane contenant les cartes d’articles -->
        <ScrollPane layoutX="30" layoutY="100" prefHeight="628.0" prefWidth="1221.0"
                    style="-fx-background: transparent; -fx-background-color: transparent; -fx-padding: 0;">
            <content>
                <FlowPane fx:id="cardsContainer" hgap="20" vgap="20"
                          prefHeight="675.0" prefWidth="1225.0"
                          style="-fx-padding: 10px;" />
            </content>
        </ScrollPane>


        <!-- Bouton pour ajouter un article -->
        <Button fx:id="btnAjouterArticle" layoutX="1141.0" layoutY="743.0"
                prefHeight="36.0" prefWidth="107.0"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px; -fx-padding: 8px 16px;"
                text="Ajouter (+)" />


    </children>
</AnchorPane>

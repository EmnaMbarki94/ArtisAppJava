<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="reservationPane" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controller.reservation.ReservationsParEvenementController" prefWidth="800" prefHeight="600">
    <VBox spacing="15" padding="20">
        <HBox spacing="20">
            <ImageView fx:id="photoEventView" fitWidth="200" fitHeight="150"/>
            <VBox spacing="10">
                <Label fx:id="nomEventLabel" style="-fx-font-size: 20px; -fx-text-fill: #4B0082;"/>
                <Label fx:id="dateEventLabel" style="-fx-font-size: 16px;"/>
            </VBox>
        </HBox>

        <Label text="📋 Réservations associées :" style="-fx-font-size: 16px; -fx-text-fill: #4B0082;"/>
        <ListView fx:id="reservationsListView" prefHeight="300"/>

        <HBox spacing="15">
            <Button fx:id="btnAjouter" text="➕ Ajouter"/>
            <Button fx:id="btnSupprimer" text="🗑️ Supprimer"/>
        </HBox>
    </VBox>
</AnchorPane>

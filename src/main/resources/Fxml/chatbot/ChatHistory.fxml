<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controller.chatbot.ChatHistoryController"
      spacing="10" style="-fx-padding: 15;">

    <Label text="Historique des Conversations" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    <ListView fx:id="historyListView" VBox.vgrow="ALWAYS"/>
    <Button fx:id="closeButton" text="Fermer" style="-fx-background-color: #dbb3f5; -fx-text-fill: white;"
            onAction="#handleClose"/>
</VBox>